open Level_4;

fun pyramid (x, y, z) =
(
    put (11, 1, 11) BLUE    (x+0, y+0, z+0);
    put ( 9, 1,  9) YELLOW  (x+1, y+1, z+1);
    put ( 7, 1,  7) RED     (x+2, y+2, z+2);
    put ( 5, 1,  5) WHITE   (x+3, y+3, z+3);
    put ( 3, 1,  3) BLACK   (x+4, y+4, z+4);
    put ( 1, 1,  1) PINK    (x+5, y+5, z+5)
);

build (40,40,40);

pyramid (0,0,0);
pyramid (10,10,10);
pyramid (0,0,5);


put (1,1,1) GREEN (0,0,0);

show "my new artifact"
